# Restore Original CloudFlare Visitor IP - https://developers.cloudflare.com/support/troubleshooting/restoring-visitor-ips/restoring-original-visitor-ips/
HTTP::header insert X-Forwarded-Host [HTTP::host]

if { [HTTP::header exists "True-Client-IP"] } {
    set originalRemoteAddr [HTTP::header "ORIGINAL-REMOTE-ADDR"]
    set cfConnectingIP [HTTP::header "CF-Connecting-IP"]

    # Exclude Cloudflare IP ranges
    set cloudflareRanges {
        173.245.48.0/20
        103.21.244.0/22
        103.22.200.0/22
        103.31.4.0/22
        141.101.64.0/18
        108.162.192.0/18
        190.93.240.0/20
        188.114.96.0/20
        197.234.240.0/22
        198.41.128.0/17
        162.158.0.0/15
        104.16.0.0/13
        104.24.0.0/14
        172.64.0.0/13
        131.0.72.0/22
    }

    # Check if cfConnectingIP is within Cloudflare IP ranges
    set isCloudflareIP 0
    foreach range $cloudflareRanges {
        if { [IP::addr $cfConnectingIP] within $range } {
            set isCloudflareIP 1
            break
        }
    }

    if { !$isCloudflareIP } {
        # Set X-Forwarded-For to cfConnectingIP
        HTTP::header replace X-Forwarded-For $cfConnectingIP

        # Update ORIGINAL-REMOTE-ADDR based on conditions
        if { $originalRemoteAddr eq "" } {
            HTTP::header insert "ORIGINAL-REMOTE-ADDR" $cfConnectingIP
        } elseif { $originalRemoteAddr ne $cfConnectingIP } {
            HTTP::header replace "ORIGINAL-REMOTE-ADDR" $cfConnectingIP
        }
    }
}
